page{
  width: 100%;
  height: 100%;
}

/* pages/coc/coc.wxss */
.index-box{
  width: 100%;
  height: 100%;
  background: #f3e6e6b0;
}
/* 外设 */
.waishe{
    width: 100%;
}
.box1{
  width: 100%;
  position: relative;
}
.box-img{
  width: 100%;
  height: 400rpx;
}
.box-tit{
  width: 100%;
  height: 40rpx;
  padding-left: 12rpx;
  line-height: 40rpx;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  font-size: 27rpx;
  color: #fff;
  z-index: 99;
  background:rgba(0, 0,0, 0.5)
}


/*  */
.box2{
  width: 100%;
  display: -webkit-flex;
  flex-wrap: wrap;
}
.xq-box{
  width: 50%;
  box-sizing: border-box;
  padding: 15rpx 10rpx 0 10rpx;
}
.xq-cont-box{
  height: 160rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
}
.xq-name{
  font-size: 50rpx;
  padding-top: 16rpx;
  text-align: center;
}
.xq-set{
  font-size: 30rpx;
  text-align: center;
  padding-top: 10rpx;
}

/* 登录跳转 */
.login-box{
  width: 100%;
}
.login-tit{
  width: 100%;
  font-size: 30rpx;
  color: #000;
  text-align: center;
  padding: 50rpx 0;
}
.login-url{
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3b82eb;
  color: #fff;
  letter-spacing: 0.1em;
}
.none{
  display: none;
}