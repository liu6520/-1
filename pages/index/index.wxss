page{
  width: 100%;
  height: 100%;
}

/* pages/coc/coc.wxss */
.index-box{
  width: 100%;
  height: 100%;
  background: #f3e6e6b0;
  overflow-x:hidden;
}
/* 外设 */
.waishe{
    width: 100%;
}
.box1{
  width: 100%;
  position: relative;
}
.box-img{
  width: 100%;
  height: 400rpx;
}
.box-tit{
  width: 100%;
  height: 60rpx;
  padding-left: 16rpx;
  line-height: 60rpx;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  font-size: 30rpx;
  color: #fff;
  z-index: 99;
  background:rgba(0, 0,0, 0.5)
}


/*  */
.box2{
  width: 100%;
  display: -webkit-flex;
  flex-wrap: wrap;
  overflow-y: auto;
  padding-bottom: 30rpx;
}
.xq-box{
  width: 50%;
  box-sizing: border-box;
  padding: 15rpx 10rpx 0 10rpx;
}
.xq-cont-box{
  height: 160rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
}
.xq-name{
  font-size: 50rpx;
  padding-top: 16rpx;
  text-align: center;
}
.xq-set{
  font-size: 30rpx;
  text-align: center;
  padding-top: 10rpx;
}

/* 颜色 */
.c{
  color: #999;
}
.green{
  color: #00ff66;
}
/* 登录跳转 */
.login-box{
  width: 100%;
}
.login-tit{
  width: 100%;
  font-size: 30rpx;
  color: #000;
  text-align: center;
  padding: 50rpx 0;
}
.login-url{
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3b82eb;
  color: #fff;
  letter-spacing: 0.1em;
}
.none{
  display: none;
}


/* 暂无数据 */
.none-box{
  width: 100%;
  height: 300rpx;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 50rpx;
  letter-spacing: 0.2em;
  color: #999;
}

.onload{
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #3b82eb;
  color: #fff;
  border-radius: 6rpx;
  letter-spacing: 0.1em;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -100rpx;
}

