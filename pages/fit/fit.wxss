/* pages/fit/fit.wxss */
page{
  width: 100%;
  height: 100%;
}
.fit-box{
  width: 100%;
  height: 100%;
}
/* 温度 */
.wendu-box{
  width: 100%;
}
.tit{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
  background-color: #eee;
  color: #333;
  font-size: 30rpx;
}
.wendu-content{
  width: 100%;
  height: 240rpx;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}
.wendu-content-box{
  width: 180rpx;
  height: 180rpx;
  background-color: #3b82eb;
  border-radius: 50%;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}
.wendu-num{
  font-size: 50rpx;
  color: #fff;
}

/* 设备 */
.shebei-box{
  width: 100%;
}
.shebei{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}
.shebei-left{
  width: 200rpx;
  display: flex;
  align-items: center;
}
.shebei-icon{
  width: 48rpx;
  height: 48rpx;
}
.shebei-name{
  font-size: 30rpx;
  padding-left: 20rpx;
}
.shebei-switch{
  zoom: 0.7;
  
}
.icon-right{
  width: 48rpx;
  height: 48rpx;
}

/* 暂无数据 */
.thebox{
  width: 100%;
}
.none-box{
  width: 100%;
  height: 100%;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;left: 0;
  text-align: center;
  font-size: 50rpx;
  letter-spacing: 0.2em;
  color: #999;
}
.none{
  display: none;
}