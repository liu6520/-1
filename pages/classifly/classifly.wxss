page{
  height: 100%;
}
.classifly-box{
  height: 100%;
  min-height: 100%;
  overflow-y: auto;
  padding-bottom: 10rpx;
}
.back{
  width: 100%;
  height: 40%;
  background-color: #3b82eb;
  position: relative;
}
.time{
  position: absolute;
  bottom: 20rpx;
  left: 0;
  color: #fff;
  font-size: 30rpx;
  padding-left: 30rpx;
}

/* 设备 */
.tit{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
  background-color: #eee;
  color: #333;
  font-size: 30rpx;
}
.shebei-box{
  width: 100%;
}
.shebei{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}
.shebei-left{
  width: 200rpx;
  display: flex;
  align-items: center;
}
.shebei-icon{
  width: 48rpx;
  height: 48rpx;
}
.shebei-name{
  font-size: 30rpx;
  padding-left: 20rpx;
}
.shebei-switch{
  zoom: 0.7;
}

/* 登录跳转 */
.login-box{
  width: 100%;
}
.login-tit{
  width: 100%;
  font-size: 30rpx;
  color: #000;
  text-align: center;
  padding: 50rpx 0;
}
.login-url{
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3b82eb;
  color: #fff;
  letter-spacing: 0.1em;
}
.none{
  display: none;
}