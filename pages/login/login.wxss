/* pages/login/login.wxss */
page{
  width: 100%;
  height: 100%;
}
 /* 登录、注册盒子 */
 .inbox{
   width: 100%;
   height: 100%;
 }
 /* 图片 */
 .login-background-pic{
   width: 100%;
   height: 450rpx;
 }
  .login-background-pic image{
   width: 100%;
   height: 450rpx;
 }
 /* 登录注册切换 */
 .logintab-box{
   width: 100%;
   height: 88.92rpx;
   border-top: 1.17rpx solid #eeeeee;
   border-bottom: 1.17rpx solid #eeeeee;
   display: flex;
 }
 .logintab{
   width: 50%;
   display: flex;
   justify-content: center;
   align-items: center;
   font-size: 32.76rpx;
 }
 .red{
   color: #3b82eb;
 }
 .hui{
   color: #999999;
 }
 /* 登录 注册 */
 .block{
   display: block;
 }
 .none{
   display: none;
 }
 .form{
   width: 100%;
   box-sizing: border-box;
   padding: 0 74.88rpx 0 65.52rpx;
 }
 /* 登录 */
 .login-form{
   width: 100%;
   padding-top: 81.9rpx;
 }
 .form-list{
   width: 100%;
   height: 91.26rpx;
   border: 1.17rpx solid #eeeeee;
   border-radius: 56rpx;
   display: flex;
   padding-left: 18.72rpx;
   margin-bottom: 46.8rpx;
   overflow: hidden;
 }
 .form-list-icon{
   width: 65.52rpx;
   height: 91.26rpx;
   display: flex;
   justify-content: center;
   align-items: center;
 }
 .form-list-icon image{
   width: 38.61rpx;
   height: 46.8rpx;
 }
 .form-input{
   width: 500rpx;
   height: 91.26rpx;
   padding-left: 11.7rpx;
 }
 .form-input input{
   height: 91.26rpx;
   font-size: 28.08rpx;  
 }
  .form-input input::-webkit-input-placeholder{
    color: #999999;
  }
  .forget-password{
    display: inline-block;
    font-size: 28.08rpx;
    color: #ff3838;
    padding-left: 23.4rpx;
    margin-bottom: 81.9rpx;
  }
  .login-button{
    width: 100%;
    height: 93.6rpx;
    background-color: #3b82eb;
    color: #fff;
    border: none;
    font-size: 32.76rpx;
    line-height: 93.6rpx;
    letter-spacing: 6rpx;
    border-radius: 56rpx;
  }
  /* 注册 */
  .register-form{
     width: 100%;
     box-sizing: border-box;
     padding: 58.5rpx 0;
  }
  .list-code{
    position: relative;
  }
  .register-form .list-code .form-input{
    width: 360rpx;
  }
  .left{
    float: left;
  }
  .right{
    float: right;
  }
  .code{
    width: 175.5rpx;
    height: 91.26rpx;
    line-height: 91.26rpx;
    text-align: center;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 99;
    font-size: 23.4rpx;
    color: #fff;
    font-family: "微软雅黑";
  }
  .code-ture{
    background-color: #ff3838;
  }
  .code-false{
    background-color: #aaa;
  }
  .tips-box{
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      margin-bottom: 70.2rpx;
  }
  .tips-box .forget-password{
    margin-bottom: 0;
  }
  .tips{
    font-size: 23.4rpx;
    color: #999999;
  }