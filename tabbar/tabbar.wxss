/* tabbar/tabbar.wxss */
.footer{
  width: 100%;
  height: 114.66rpx;
  background-color: #fff;
  display: flex;
  border-top: 1.17rpx solid #eeeeee;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
}
.table{
  width: 25%;
  padding-top: 12rpx;
}
.table-pic{
  width: 51.48rpx;
  height: 51.48rpx;
  display: block;
  margin: 0 auto;
}
.red{
  color: #d10602;
  font-size: 23.58rpx;
  display: block;
  text-align: center;
  padding-top: 9.36rpx;
}
.the{
  color: #7e7e7e;
  font-size: 23.58rpx;
  display: block;
  text-align: center;
  padding-top: 9.36rpx;
}
.shopcat{
  width: 51.48rpx;
  height: 51.48rpx;
  display: block;
  margin: 0 auto;
  position: relative;
}
.num-box{
  position: absolute;
  top: -10rpx;
  right: -11rpx;
  width: 37.44rpx;
  height: 37.44rpx;
  border-radius: 50%;
  z-index: 99;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.num{
  width: 28.08rpx;
  height: 28.08rpx;
  line-height: 28.08rpx;
  background-color: #ff6c04;
  text-align: center;
  color: #fff;
  font-size: 16rpx;
  border-radius: 50%;
  text-overflow: hidden;
}